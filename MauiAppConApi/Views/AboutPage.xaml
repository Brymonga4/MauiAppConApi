<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppConApi.Views.AboutPage"
             xmlns:controls="clr-namespace:MauiAppConApi.Controls"
             Title="AboutPage">
    <ScrollView>
        <Grid ColumnDefinitions="Auto, *, Auto"
              RowDefinitions="Auto, Auto, Auto">

            <Label Grid.Column="1" 
                   Text="RICK AND MORTY"
                   FontSize="Header"
                   HorizontalTextAlignment="Center"/>

            <Image Grid.Row="1" Grid.Column="1" 
                   Source="rick_and_mortimer.jpg"/>

            <Label  Grid.Row="2" Grid.Column="1" 
                    HorizontalTextAlignment="Center"
                    LineBreakMode="WordWrap"
                    FontSize="25"
                    Text="The fractured domestic lives of a nihilistic mad scientist and his anxious grandson are further complicated by their inter-dimensional misadventures."/>

        </Grid>
    </ScrollView>
</ContentPage>