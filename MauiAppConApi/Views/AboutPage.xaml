<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppConApi.Views.AboutPage"
             xmlns:controls="clr-namespace:MauiAppConApi.Controls"
             Title="AboutPage">
    <ScrollView>
        <FlexLayout Direction="Row"
            Wrap="Wrap"
            JustifyContent="SpaceBetween"
            AlignItems="Start"
            BindableLayout.ItemsSource="{Binding Cosas}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <controls:CardView BorderColor="{StaticResource Rick}"
                           CardTitle="The pleasure of"
                           CardDescription="{Binding Name}"
                            IconBackgroundColor="SlateGray"
                            IconImageSource="mr_meeseeks.png"
                                   />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
    </ScrollView>
</ContentPage>